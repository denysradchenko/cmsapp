mixin item(title, url)
  li
    a(href=url class=path === url ? 'nav-link-active' : null) #{title}

doctype html
html
  head
    title= title
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav
      ul
        +item('Main Page', '/')
        +item('News', '/news')
        +item('Quiz', '/quiz')
        +item('Admin', '/admin')
    block content
